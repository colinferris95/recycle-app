<% include ./partials/header.ejs %>




<div class="container-fluid">

	<div class="row">

		<div class="col-xs-12 col-md-8">

			<img src="img/map-placeholder.png" alt="map" class="img-responsive">

			<form action="/home" method="post">
				

				<label>Check locations in your area</label>
				<input type="text" name="zip" placeholder="Zip Code">
				<input type="submit" name="submit">

			</form>	
		



		</div>


		<div class="col-xs-12  col-md-4">

			<div class="row">

			


				<% recycleCenters.result.forEach((center) =>{ %>
					<div class="col-xs-12 col-md-12 col-lg-12" style="border:1px solid; height:200px;">
						<%= center.description %>

						<%= center.distance %>


						<%= center.location_id %>

					</div>

				<% }); %>

				

			</div>

		</div>

	</div>




</div>

<% include ./partials/footer.ejs %>