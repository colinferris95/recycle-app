<% include ./partials/header.ejs %>




<div class="container-fluid">

	<div class="jumbotron">

		
		<form class="form-inline" action="/search" method="get">	
			<div class="form-group">

				
	  				<h1 class="display-4">Search for Item</h1>

	  	


	  		

		  			<input type="text" class="form-control" placeholder="Search" aria-label="Search" size="100" name="searchTerm">

		

		
		  			<button type="submit" class="btn btn-primary">Submit</button>
		  		


	  		</div>

	  	</form>
	  
	</div>




</div>


<div class="container-fluid ">

	<div class="row">

	

		<div class=" col-md-4 col-lg-8 ">

			<div class="row">

			


				<% searchResults.forEach((search) =>{ %>
					<div class="col-xs-12 col-md-12 col-lg-12" style="border:1px solid; height:200px;">

						<%= search.brand_name %>
						<%= search.name %>
						<%= search.gtin14 %>

						<button><a href="/item/<%=search.gtin14%>">More Information </a></button>
					</div>

				<% }); %>

				

			</div>

		</div>

	</div>




</div>

<% include ./partials/footer.ejs %>